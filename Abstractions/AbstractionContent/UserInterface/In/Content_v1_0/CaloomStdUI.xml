<?xml version="1.0" encoding="utf-8"?>
<UserInterfaceAbstraction xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../UserInterfaceABS/UserInterface/Content_v1_0/UserInterface_v1_0.xsd">
	<UserInterfaces>
		<UserInterface domainName="Caloom.Web" name="HTML5">
      <Views>
        <View name="GeneralEventView" designDesc="View for general event info">
          <ViewLayout layoutType="FlowLayout" />
          <ViewProperty name="EventName" dataType="string" isRequired="true">
            <String minLength="4" maxLength="40"/>
            <LabelText>Event name</LabelText>
            <Info>The name of the event</Info>
          </ViewProperty>
          <ExpandingBox name="SummaryBox" />
          <ChildView childViewName="GeneralLocationView" viewMode="Expandable,Fixed" initialMode="BriefSummary"/>
          <ChildView childViewName="MapLocationView" when="SummaryBox.Minimized" initialMode="Open" />
          <ExpandingBox name="SummaryBox">
            <Expanded>
              <ChildView childViewName="GeneralLocationView" when="SummaryBox.Expanded"/>
              <ChildView childViewName="MapLocationView" when="SummaryBox.Minimized" />
            </Expanded>
            <Minimized>
              <ChildView childViewName="GeneralLocationView" when="SummaryBox.Expanded"/>
              <ChildView childViewName="MapLocationView" when="SummaryBox.Minimized" />
            </Minimized>
          </ExpandingBox>
          <ChildView childViewName="GeneralLocationView" when="SummaryBox.Expanded"/>
          <ChildView childViewName="MapLocationView" when="SummaryBox.Minimized" />
        </View>
        <View name="GeneralLocationView" designDesc="Generic view of showing location">
          <Mode modeType="Minimal">
            
          </Mode>
          <Mode modeType="Summary">
            
          </Mode>
          <Mode modeType="Full">
            
          </Mode>
          <Closed>
            <ViewLayout layoutType="VerticalStack" />
            <ViewProperty name="LocationName" dataType="string" isRequired="true">
              <String minLength="4" maxLength="40"/>
              <LabelText>Location name</LabelText>
              <Info>The name of the location</Info>
            </ViewProperty>
          </Closed>
          <ViewLayout layoutType="VerticalStack" />
          <ViewProperty name="LocationName" dataType="string" isRequired="true">
            <String minLength="4" maxLength="40"/>
            <LabelText>Location name</LabelText>
            <Info>The name of the location</Info>
          </ViewProperty>
          <ViewProperty name="Latitude" dataType="decimal" isRequired="true">
            <Numeric />
            <LabelText>Latitude</LabelText>
            <Info>Latitude tooltip</Info>
          </ViewProperty>
          <ViewProperty name="Longitude" dataType="decimal" isRequired="true">
            <Numeric />
            <LabelText>Longitude</LabelText>
            <Info>Longitude tooltip</Info>
          </ViewProperty>
        </View>
        <View name="MapLocationView" designDesc="Map image location view">
          <ViewLayout layoutType="VerticalStack" />
          <ViewProperty name="Location" dataType="LocationData" isRequired="true">
            <AttachmentBlob extension=".png" mediaType="Image"/>
            <LabelText>Location map</LabelText>
            <Info>Location displayed in a map</Info>
          </ViewProperty>
        </View>
      </Views>
		</UserInterface>
	</UserInterfaces>
</UserInterfaceAbstraction>
